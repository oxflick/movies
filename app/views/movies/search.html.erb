<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Actor</th>
      <th>Genre</th>
     <% if user_signed_in? && current_user.admin? %>
      <th colspan="2"></th>
    <% end %>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.title, movie %></td>
        <td><%= movie.year %></td>
        <td><%= movie.actor %></td>
        <td><%= movie.genre %></td>
       <% if user_signed_in? && current_user.admin? %>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
       <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>