<%= form_for([@movie, @similarity], :html => { multipart: true}) do |f| %>
  <% if @similarity.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
     <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@similarity.errors.count, "error") %> prohibited this similarity from being saved:</h4>

      <ul>
      <% @similarity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :actor %><br>
    <%= f.text_field :actor, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :why %><br>
    <%= f.text_field :why, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :url %><br>
    <%= f.text_field :url, class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
